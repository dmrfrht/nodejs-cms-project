<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">All Categories</h1>
    </div>
  </div>

  <table class="table table-bordered">
    <thead class="bg-dark text-center">
    <tr class="text-white">
      <th>Title</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody class="text-center category-list">
    {{#each cats}}
      <tr>
        <td>{{ title }}</td>
        <td class="d-flex">
          <a href="/admin/category/edit/{{ _id }}" class="btn btn-success btn-sm mr-2">Edit</a>

          <form action="/admin/category/delete/{{ _id }}?newMethod=DELETE" method="post">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>

  <hr/>

  <div class="row p-3">
    <div class="col-md-12">
      <div class="form-group">
        <label for="category-title">Title</label>
        <input type="text" id="category-title" class="form-control" name="title" value="{{ cat.title }}">
        <input type="hidden" id="category-id" class="form-control" name="id" value="{{ cat._id }}">
      </div>
      <button class="btn btn-outline-warning" type="submit" id="update-category-button">Update Category</button>
    </div>
  </div>

</div>