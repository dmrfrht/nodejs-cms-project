<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">All Posts</h1>
    </div>
  </div>

  <table class="table table-bordered">
    <thead class="bg-dark text-center">
    <tr class="text-white">
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Allowed Comments</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody class="text-center">
    {{#each posts}}
      <tr>
        <td>{{ title }}</td>
        <td>{{ description }}</td>
        <td>{{ status }}</td>
        <td>{{ allowComments }}</td>
        <td>
          <a href="/admin/posts/edit/{{ _id }}" class="btn btn-success btn-sm">Edit</a>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>

</div>